{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
	<header>
		{{> back-button}}
	</header>

	<form class="page__section">
		<h1 class="page__title">Восстановление пароля</h1>

		<div class="form">

			<div class="form__item">
				{{> field action='recoveryConfirmForm.change' name='code' label='Код:' type='number'
				placeholder='Введите код из email'}}
				<span name="code" class="form__error">Error</span>
			</div>

			<div class="form__item">
				{{> field-password action='recoveryConfirmForm.change' name='password' label='Новый пароль:'
				placeholder='Введите пароль:'}}
				<span name="password" class="form__error">Error</span>
			</div>

			<div class="form__item">
				{{> field-password action='recoveryConfirmForm.change' name='passwordAgain' label='Подтвердите новый пароль:'
				placeholder='Введите пароль еще раз:'}}
				<span name="passwordAgain" class="form__error">Error</span>
			</div>

		</div>

		<button onclick="recoveryConfirmForm.submit()" class="button button--disabled" type="button">Изменить
			пароль</button>

		<span class="alert alert--disabled">Внимание, ошибка!</span>
	</form>
</div>

