{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
	<header>
		{{> back-button}}
	</header>

	<form class="page__section">
		<h1 class="page__title">Регистрация</h1>

		<div class="form">

			<div class="form__item">
				{{> field action='signupForm.change' name='email' label='Эл. адрес:' type='email'
				placeholder='Введите Ваш email'}}
				<span name="email" class="form__error">Error</span>
			</div>

			<div class="form__item">
				{{> field-password action='signupForm.change' name='password' label='Пароль:'
				placeholder='Введите пароль:'}}
				<span name="password" class="form__error">Error</span>
			</div>

			<div class="form__item">
				{{> field-password action='signupForm.change' name='passwordAgain' label='Подтвердите пароль:'
				placeholder='Введите пароль еще раз:'}}
				<span name="passwordAgain" class="form__error">Error</span>
			</div>

			<div class="form__item">
				{{> field-select action='signupForm.change' name='role' label='Роль:'
				placeholder='Выберите роль' list=data.role}}
				<span name="role" class="form__error">Error</span>
			</div>


			<div class="form__item">
				{{> field-checkbox action='signupForm.change' name='isConfirm' label='Вы соглашаетесь с правилами сервиса'}}
				<span name="isConfirm" class="form__error">Error</span>
			</div>

		</div>

		<button onclick="signupForm.submit()" class="button button--disabled" type="button">Зарегистрироваться</button>

		<span class="alert alert--disabled">Внимание, ошибка!</span>

		<span class="link__prefix">Уже зарегистрированы? <a href="/login" class="link">Войти</a></span>
	</form>
</div>

